rules_version = '2';

// ⚠️ TEST MODE — allows all reads/writes without authentication.
// Paste these rules into your Firebase Console → Firestore → Rules tab.
// WARNING: Do NOT use in production! Replace with proper auth-based rules before going live.

service cloud.firestore {
  match /databases/{database}/documents {
    match /{document=**} {
      allow read, write: if true;
    }
  }
}
